<% include ../partials/header %>

<div class="container">

  <div class="jumbotron">
    <h1 class="hero-text">Photo Repo</h1>
    <h3 class="hero-desc">
      View photos. Post comments. Rinse and repeat.
    </h3>
    <div class="main-btn">
      <a class="btn btn-info test-btn" href="/photos/new">Add New Photo</a>
    </div>
  </div>

    <div class="row">
           <!--campgrounds is a collection from the yelp_camp DB-->
          <% photos.forEach(function(photo){ %>
              <div class="col-md-3 col-sm-6">
                  <div class="thumbnail">
                     <img src="<%= photo.image %>">
                  </div>

                  <p>
                    <!--during creation, every anchor tag has a ref to its own id-->
                    <!-- <a class="more-info-style" href="photos/<%= photo._id %>">More info</a> -->
                  </p>

              </div><!--end of col-->


          <% }); %>
      </div>

</div>

<% include ../partials/footer %>
