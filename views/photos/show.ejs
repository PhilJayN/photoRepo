<% include ../partials/header %>

<h1>Photo Repo</h1>

<div class="container">

  <div class="row">
    <div class="col-md-3">
      Side bar left
    </div>
      <div class="col-md-9">
        <div class="thumbnail">
        <p>
          <%= photo.name %>
        </p>

        <p>
          <img class="img-responsive" src="  <%= photo.image %> " alt="" />
        </p>

        <div class="caption-full">
          <p>
            <%= photo.description %>
          </p>
        </div>
        <p>
          Submitted by <%= photo.author.username %>
        </p>

        <% if (currentUser && photo.author.id.equals(currentUser._id)) { %>
          <a class="edit-style" href="/photos/<%= photo._id %>/edit">Edit</a>
          <form class="delete-form" action="/photos/<%= photo._id %>?_method=DELETE" method="post">
            <button class="del-style">Delete</button>
          </form>
        <% } %>
      </div>

          <% photo.comments.forEach(function(comment){ %>
            <div class="well">
              <p>
              <strong><%= comment.author.username %></strong>
            </p>
            <p>
               <%= comment.text %>
            </p>

            <% if (currentUser && comment.author.id.equals(currentUser._id)) { %>

              <a class="edit-style"
              href="/photos/<%= photo._id %>/comments/<%= comment._id %>/edit">Edit
            </a>

            <form class="delete-form" action="/photos/<%= photo.id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                <button class="del-style">Delete</button>
            </form>

            <% } %>

          </div>

          <% }) %>


      <div class="well-accent-bar">
        <p>
          <a class="btn btn-default" href="/photos/<%= photo._id %>/comments/new">Add a comment</a>
        </p>
      </div>
    </div>
  </div>
</div>

