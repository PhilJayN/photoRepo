<h1>Add new comments!</h1>
  <form action="/photos/:id/comments" method="POST">
    <div class="form-group">
      <input type="text" name="name" class="form-control" placeholder="Name of Photo">
    </div>
    <div class="form-group">
      <input type="text" name="image" class="form-control" id="imageUrl" placeholder="Image URL">
    </div>
    <div class="form-group">
      <input type="text" name="description" class="form-control" id="description" placeholder="Description">
    </div>
    <p>
      <button class="btn btn-primary">Submit</button>
    </p>
  </form>
