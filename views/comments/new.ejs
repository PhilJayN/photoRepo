<% include ../partials/header %>

<h1>Add new comments to <%= photo.name %></h1>
  <h2>id from db: <%= photo._id %></h2>

  <form action="/photos/<%= photo._id %>/comments" method="POST">
    <div class="form-group">
      <input type="text" name="comment[text]" class="form-control" placeholder="Text">
    </div>
    <div class="form-group">
      <input type="text" name="comment[author]" class="form-control" placeholder="Author">
    </div>
    <p>
      <button class="btn btn-primary">Submit</button>
    </p>
  </form>
<% include ../partials/footer %>
