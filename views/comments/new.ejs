<% include ../partials/header %>

<h1>Add new comments to <%= photo.name %></h1>
  <form action="/photos/:id/comments" method="POST">
    <div class="form-group">
      <input type="text" name="name" class="form-control" placeholder="Comment">
    </div>
    <div class="form-group">
      <input type="text" name="image" class="form-control" id="imageUrl" placeholder="Author">
    </div>
    <p>
      <button class="btn btn-primary">Submit</button>
    </p>
  </form>
<% include ../partials/footer %>
