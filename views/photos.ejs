<% include partials/header %>
<h1>Photos page!</h1>
<h1 >Add a New Photo!</h1>

  <form action="/photos/addPhoto" method="POST">
      <input type="text" name="name" placeholder="Name of Photo">
      <input type="text" name="image" placeholder="Image URL">
      <input type="text" name="description" placeholder="Description of Photo">
      <button>Submit</button>
  </form>

  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
         <!--campgrounds is a collection from the yelp_camp DB-->
        <% photos.forEach(function(photo){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= photo.image %>">
                   <div class="caption">
                       <h4><%= photo.name %></h4>
                   </div>
                </div>
            </div>
        <% }); %>
    </div>

<button type="button" class="btn btn-warning">Warning</button>

<% include partials/footer %>
